---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import BaseCard from "@/components/BaseCard.astro";
import FriendCard from "@/components/mdx/FriendCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
import RepositoryCard from "@/components/mdx/RepositoryCard.astro";
---

<BaseLayout title="Projects">
  <MainCard
    infoIcon="lucide:code-2"
  >
       <!-- My Repositories -->
    <section class="py-4">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <Icon name="lucide:folder" class="w-6 h-6 text-primary" />
        <span>My Projects</span>
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <FriendCard
              name="HomePage"
              avatar="/home.svg"
              description="一个毛玻璃透明风格的简约个人主页 / 导航页"
              url="https://zayck-top.pages.dev"
              type="friend"
        />
        <FriendCard
              name="Hexo"
              avatar="/hexo.svg"
              description="Hexo 框架 Butterfly 主题博客。我的第一个博客版本"
              url="https://zayck.netlify.app"
              type="friend"
        />

        <FriendCard
              name="Hugo"
              avatar="/hugo.svg"
              description="Hugo 框架 Stack 主题博客。简洁的卡片式布局风格"
              url="https://zayck-teek.pages.dev"
              type="friend"
        />

        <FriendCard
              name="Rin"
              avatar="https://zayck-img.pages.dev/file/1765007987280_BandiView_R.jpg"
              description="Cloudflare全家桶的简洁博客，个人觉得不如 Hugo-Stack 主题好看"
              url="https://zayck-rin.pages.dev"
              type="friend"
        />

        <FriendCard
              name="Firefly"
              avatar="https://zayck-img.pages.dev/file/1765005605410_BandiView_firefly.webp"
              description="清新美观的 Astro 博客主题模板，作者基于 Fuwari 二次开发"
              url="https://zayck-firefly.pages.dev"
              type="friend"
        />

        <FriendCard
              name="Kael"
              avatar="/goat.png"
              description="一款简洁大气的 Astro 框架博客主题，目前正在使用的博客"
              url="https://jasonblog.pages.dev"
              type="friend"
        />

        <FriendCard
              name="Solara"
              avatar="https://zayck-img.pages.dev/file/1765007272170_music.png"
              description="一个极简风格的基于免费 API 的音乐播放器"
              url="https://zayck-music.pages.dev"
              type="friend"
        />

        <FriendCard
              name="Telegraph-Image"
              avatar="/图片 (3).svg"
              description="Cloudflare + Telegram 实现的免费图床。网站刚刚打开时很慢"
              url="https://zayck-image.pages.dev"
              type="friend"
        />

        <FriendCard
              name="Sanyue ImgHub"
              avatar="https://zayck-img.pages.dev/file/1765007752168_pi.png"
              description="Cloudflare + Telegram 实现的免费图床。目前自用中……"
              url="https://zayck-img.pages.dev"
              type="friend"
        />

        <FriendCard
              name="MoonTV"
              avatar="/TV1.svg"
              description="MoonTV - 个人视频点播站，支持多种格式"
              url="https://zayck-tv.pages.dev"
              type="friend"
        />

        <FriendCard
              name="moemail"
              avatar="/邮箱.svg"
              description="一个像素风格的无限临时 / 永久邮箱服务。目前自用中……"
              url="https://zayck34.dpdns.org/zh-CN"
              type="friend"
        />

        <FriendCard
              name="News Now"
              avatar="/新闻.svg"
              description="一个卡片布局风格的新闻热搜聚合站"
              url="https://zayck-hot.pages.dev"
              type="friend"
        />

      </div>

      <div class="flex justify-center mt-10">
        <a
          href="https://github.com/zayck?tab=repositories"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-outline gap-2"
        >
          <Icon name="lucide:github" class="w-5 h-5" />
          <span>View More on GitHub</span>
        </a>
      </div>
    </section>

    
  </MainCard>
</BaseLayout>
